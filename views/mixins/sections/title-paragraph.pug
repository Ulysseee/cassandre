mixin title-paragraph(title, paragraph)
    section.ui-container-large.section-titleParagraph
        .section-titleParagraph-wrapper
            h3(data-component='Title' data-option-delay='0.25').ui-p-m.section-titleParagraph-title!=title
            p(data-component='Paragraph' data-option-delay='0.35' data-option-opacity data-option-stagger-lines).section-titleParagraph-paragraph!=getSpacerText(paragraph)