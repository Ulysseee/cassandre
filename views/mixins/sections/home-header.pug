                    span.ui-h1.section-homeHeader-titleChar
                        span.letter(data-ref='titleChunks[]') N
                    span.ui-h1.section-homeHeader-titleChar
                        span.letter(data-ref='titleChunks[]') D
                    span.ui-h1.section-homeHeader-titleChar
                        span.letter(data-ref='titleChunks[]') R
