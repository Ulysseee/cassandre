                        span.letter(data-ref='titleChunks[]') A
                    span.ui-h1.section-homeHeader-titleChar
                        span.letter(data-ref='titleChunks[]') S
                    span.ui-h1.section-homeHeader-titleChar
                        span.letter(data-ref='titleChunks[]') S
                    span.ui-h1.section-homeHeader-titleChar
