    header.section-homeHeader(data-component='HomeHeader' data-option-bubble-images=getBubbleImages(bubbleImages))
        .ui-container-large.section-homeHeader-container
            p.section-homeHeader-baseline(data-component='Paragraph' data-option-no-auto data-option-delay='0.5' data-option-stagger-lines)!=baseline
