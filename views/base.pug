block variables

include mixins/circled-button
include mixins/image
include mixins/scribble-link
include mixins/svg-reveal
include mixins/parallax
include mixins/work-card

doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
        meta(name="msapplication-tap-highlight" content="no")

        base(href="/")

        title=(metaPageName ? metaPageName + ' - ' : '') + common.siteName
        meta(name="description" content=common.siteDescription)

        link(rel="icon" type="image/x-icon" href="images/favicon.ico")
        link(rel="apple-touch-icon" sizes="180x180" href="images/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="images/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="images/favicon-16x16.png")
        link(rel="mask-icon" href="images/safari-pinned-tab.svg" color="#DACAB5")

        link(href="/main.css" rel="stylesheet")

        meta(name="msapplication-TileColor" content="#F6EDE2")
        meta(name="theme-color" content="#1C1B1A")

        meta(property="og:type" content="website")
        meta(property="og:title" content=common.siteName)
        meta(property="og:description" content=common.siteDescription)
        meta(property="og:image" content='https://cassandrelevrard.com/images/ogimage.jpg')

        meta(name="twitter:card" content="summary_large_image")
        meta(name="twitter:title" content=common.siteName)
        meta(name="twitter:description" content=common.siteDescription)
        meta(name="twitter:image" content='https://cassandrelevrard.com/images/ogimage.jpg')

    body

        #app.app(data-component="App" data-breakpoint class='is-' + pageShade)
            include components/navigation
            main#page-container(data-ref="pageContainer" data-taxi)
                #page(class='page page-' + pageName + ' is-' + pageShade data-component=pageComponent data-taxi-view=renderer ? renderer : '')
                    block page
            include components/cursor
            include components/preloader

        #appOverlay.appOverlay

        script(src="/main.js")
