footer.component-footer(data-component='Footer')
    .component-footer-mask(data-ref='mask')
        .component-footer-wrapper.ui-container-large(data-ref='wrapper')
            .component-footer-top
                .component-footer-text
                    h4.component-footer-title(data-component='Title' data-option-intersection-observer='{"rootMargin": "0px 0px 80% 0px"}')!=footer.title
                .component-footer-signature-figure
                    +svg-reveal
                        svg(data-ref='svg' width='95' height='107' viewbox='0 0 95 107' fill='none' xmlns='http://www.w3.org/2000/svg')
                            path(d='M2.32422 100.536C2.32422 100.536 12.3026 79.794 14.5289 60.4335C16.7551 41.073 18.1465 30.0709 16.6856 18.0849C15.2246 6.09894 10.0962 5.51257 6.9755 16.2761C3.85477 27.0397 2.37391 45.3367 5.14679 63.753C7.91967 82.1693 10.2751 104.849 19.0609 104.879C27.8466 104.909 33.8893 84.0775 38.2922 61.8448C42.695 39.612 40.8663 15.491 39.4749 8.41465C37.994 0.861282 32.2395 -1.3451 29.7549 8.62336C26.0776 23.4121 27.4491 52.1745 29.3573 61.8448C31.2655 71.5151 32.9949 85.5981 42.695 85.5981C52.3951 85.5981 57.1557 71.4455 57.7222 60.7515C58.2887 50.0576 58.7757 41.5898 56.5892 33.4998C53.9853 23.8593 47.9625 27.4571 48.6383 36.0043C49.175 42.6632 50.626 49.1233 55.2674 55.812C58.3285 60.2148 63.0891 65.0848 66.0011 58.9129C67.7702 55.166 68.3168 46.9865 68.3963 40.268C68.3963 36.9982 68.6348 33.957 68.0683 32.0388C66.995 28.441 62.4828 29.733 63.8146 34.0762C67.0425 44.5597 83.1244 51.1997 92.6906 36.3115' stroke='#FF6C3C' stroke-width='2.7' stroke-linecap='square')
            .component-footer-bottom
                .component-footer-content 
                    .component-footer-content-contact
                        h5.ui-p-m.component-footer-subtitle=footer.contactColumnTitle
                        a.ui-p-m.component-footer-mail(href='mailto:' + getMail(common.externalLinks).value data-ref='cursorLink[]')
                            span.component-footer-mailText(data-component='Title')!=getMail(common.externalLinks).value
                        ul.component-footer-social-list
                            each externalLink, index in common.externalLinks
                                if externalLink.key !== 'mail' & externalLink.key !== 'Purée Maison' & externalLink.key !== 'Ultranoir' 
                                    li.component-footer-social-item
                                        a.ui-p-m.component-footer-social-link(href=externalLink.value target='_blank' rel='noopener noreferrer' class=`is-${ externalLink.key }`)
                                            span(data-component='Paragraph' data-option-delay='0.2')!=externalLink.key
                                            span!=`${index !== common.externalLinks.length - 1 ? ',&nbsp;' : ''}`
                    .component-footer-content-activities
                        h5.ui-p-m.component-footer-subtitle=footer.recentActivityColumnTitle
                        p.ui-p-m.component-footer-content-activities-text
                            span(data-component="Title")=footer.recentActivities
                .component-footer-legal
                    p © #{new Date().getFullYear()}
                    .component-footer-signature
                        .component-footer-signature-link=footer.signature + ' '
                            +scribble-link(footer.firstDeveloperLink, 'Tibère Debizet', {"target":"_blank"}, {"rel": "noopener noreferrer"})
                            span=" & "
                            +scribble-link(footer.secondDeveloperLink, 'Ulysse Gravier', {"target":"_blank"}, {"rel": "noopener noreferrer"})
